<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noAppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="base_btn_google">
        <item name="android:background">@drawable/background_white</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">3dp</item>
    </style>
    <style name="base_button">
        <item name="android:background">@drawable/background_red</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="base_card_view">
        <item name="android:background">@drawable/background_white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="base_pencarian">
        <item name="android:background">@drawable/background_white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableLeft">@drawable/icon_pencarian</item>
    </style>

</resources>
